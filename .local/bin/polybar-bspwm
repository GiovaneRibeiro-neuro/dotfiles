#!/bin/bash

# Terminate all instances
killall -q polybar

# wait until all processes have been shut down
while pgrep -u $UID -x polybar >/dev/null; do : ; done

for m in $(polybar --list-monitors | cut -d":" -f1); do
	WIRELESS=$(ls /sys/classes/net | grep ^wl | awk 'NR==1{print $1}') MONITOR=$m polybar --reload mainbar-bspwm &
done

echo "[POLYBAR] Bars launched successfully.
